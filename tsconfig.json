{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./src/*"], /* path aliases*/
      "@components/*": ["components/*"], 
      "@ui/*": ["components/ui/*"], 
      "@hooks/*": ["hooks/*"], 
      "@app/*": ["app/*"], 
      "@img/*": ["../public/img/*"],
      "@icons/*": ["../public/icons/*"],
      "@utils/*": ["utils/*"],
      "@data/*": ["data/*"],
      "@lib/*": ["lib/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
